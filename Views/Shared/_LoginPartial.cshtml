@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item nav-link">
            @Html.ActionLink("Level Info", "Index", "Level")
        </li>
        <li class="nav-item nav-link">
            @Html.ActionLink("Item Info", "Index", "Item")
        </li>
        <li class="nav-item nav-link">
            @Html.ActionLink("Enemy Info", "Index", "Enemy")
        </li>
        <li>
            @Html.ActionLink("Account: " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off <i class="fas fa-sign-out-alt"></i></a>
        </li>

    </ul>
    }
}
else
{
<ul class="nav navbar-nav ml-auto">
    <li class="nav-item nav-link"><i class="fas fa-user-plus"></i> @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li class="nav-item nav-link"><i class="fas fa-sign-in-alt"></i> @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
