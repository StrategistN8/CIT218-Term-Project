<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
        body {
            padding-top: 0px;
        }
        .navbar{
            font-family: Xolonium;
            background-color:black;
            /*background-image: url(../../Content/Images/GlyphsH.png);*/
        }
        .navbar a:link {
            color: darkorange;
            text-decoration: none;
        }

        .navbar a:visited {
            color: darkorange;
        }

            .navbar a:hover {
                color: lemonchiffon;
                transition: 1s;
                /*font-size: 1.2em;*/
            }
        .nav li{
            padding: 2px;
        }
    </style>
</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <a class="navbar-brand" href="#" style="font-family: Nero">Abyss Run</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item nav-link">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Enemies", "DisplayInfo", "Enemy")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Level Info", "Index", "Level")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Item Info", "Index", "Item")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Enemy Info", "Index", "Enemy")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
            </ul>
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item nav-link"><a href="#"><i class="fas fa-user-plus"></i>Register</a></li>
                <li class="nav-item nav-link"><a href="#"><i class="fas fa-sign-in-alt"></i>Login</a></li>
            </ul>
        </div>
    </nav>
</header>
<body>                 
    <section class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-danger">&copy; @DateTime.Now.Year - Jim Lyons</p>
        </footer>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
