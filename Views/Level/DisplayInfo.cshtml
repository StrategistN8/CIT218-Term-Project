@model AbyssRunSite.Models.LevelPopulatonViewModel
@using AbyssRunSite.Models

<style>
    .jumbotron {
        background-image: url(../../Content/Images/InfoHeader.PNG);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<article class="jumbotron">
    <h1>Levels</h1>
</article>

<section class="col-12 jumbotron-fluid" id="itemHeader">
    <table class="table table-responsive-lg bg-dark">
        <tr>
            <th>Name</th>
            <th>Screenshot</th>
            <th>Description</th>
            <th>New Enemies</th>
            <th>New Items</th>
            <th>Options</th>
        </tr>

        @foreach (LevelModel item in Model.LevelData)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.LevelName)</td>
        @if (item.LevelScreenshotSrc != "" && item.LevelScreenshotSrc != null)
        {
            <td>
                <img src=@Url.Content(item.LevelScreenshotSrc) alt="@Html.DisplayFor(modelItem => item.LevelName)" />
            </td>
        }
        else
        {
            <td>No Image Available</td>
        }
        <td>@Html.DisplayFor(modelItem => item.LevelDescription)</td>
        <td>
            <ul>
                @foreach (EnemyModel foe in item.LevelEnemies)
                {
                    <li>@Html.DisplayFor(modelItem => foe.EnemyName)</li>

                }
            </ul>
        </td>
        <td>
            <ul>
                @foreach (ItemModel itm in item.LevelItems)
                {
                    <li>@Html.DisplayFor(modelItem => itm.ItemName)</li>
                }
            </ul>
        </td>
        <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
    </tr>
        }
    </table>

</section>
