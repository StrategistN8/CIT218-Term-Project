@model IEnumerable<AbyssRunSite.Models.EnemyModel>

@{
    ViewBag.Title = "Index";
}
<section class="jumbotron">
    <h1>Enemies</h1>
</section>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("search")
        <input type="submit" value="search" />
    </p>
}
<section class="col-12">
    <table class="table-responsive-xl">
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.SortName })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnemyAttack)
            </th>
            <th>
                @Html.ActionLink("Health", "Index", new { sortOrder = ViewBag.SortHP })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnemyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnemyImageSrc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnemyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnemyAttack)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnemyHP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnemyDescription)
                </td>
                @if (item.EnemyImageSrc != "" && item.EnemyImageSrc != null)
                {
                    <td>
                        <img src=@Url.Content(item.EnemyImageSrc) alt="@Html.DisplayFor(modelItem => item.EnemyName)" />
                    </td>
                }
                else
                {
                    <td>No Image Available</td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
            <tr><td></td><td></td><td></td><td></td><td></td><td></td></tr>
        }

    </table>
</section>