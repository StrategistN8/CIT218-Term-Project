@model IEnumerable<AbyssRunSite.Models.EnemyModel>

@{
    ViewBag.Title = "Index";
}

<section class="jumbotron">
<h1>Enemies</h1>
</section>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnemyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnemyAttack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnemyHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnemyDescription)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.EnemyImageSrc)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.EnemyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EnemyAttack)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EnemyHP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EnemyDescription)
    </td>
    @*<td>
            <img src= @Html.DisplayTextFor(modelItem => item.EnemyImageSrc)/>
        </td>*@
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
